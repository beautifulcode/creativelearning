<p>
  <label>Parent Page: <%= f.select :parent_id, Page.find(:all).collect{|page| [page.title, page.id] }, {:include_blank => true} %></label>
</p>
<p>
  <label for="page_title">Title:</label>
  <%= f.text_field :title %>
</p>
<p>
  <label for="page_body">Body:</label>
  <%= f.text_area :body, :class => 'widgEditor' %>
</p>
<p>
  <label>Active:</label>
  <%= f.check_box :active %>
</p>